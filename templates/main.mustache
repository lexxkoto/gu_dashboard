{{!
    @template block_gu_dashboard/main

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}

{{ courses }}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview" data-region="myoverview">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" href="#myoverview_pinned_view" role="tab" data-toggle="tab">
                {{#str}} pinnedcourses, block_gu_dashboard {{/str}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#myoverview_courses_view" role="tab" data-toggle="tab">
                {{#str}} allcourses, block_gu_dashboard {{/str}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#myoverview_timeline_view" role="tab" data-toggle="tab">
                {{#str}} timeline, block_gu_dashboard {{/str}}
            </a>
        </li>
    </ul>
    <div class="tab-content content-centred">
        <div role="tabpanel" class="tab-pane fade in active" id="myoverview_pinned_view">
            {{> block_gu_dashboard/pinned-view }}
        </div>
        <div role="tabpanel" class="tab-pane fade" id="myoverview_timeline_view">
            {{> block_gu_dashboard/timeline-view }}
        </div>
        <div role="tabpanel" class="tab-pane fade" id="myoverview_courses_view">
            {{#coursesview}}
                {{> block_gu_dashboard/courses-view }}
            {{/coursesview}}
        </div>
    </div>
</div>
